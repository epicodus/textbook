<%= render :partial => 'layouts/errors', :locals => {:object => @lesson} %>
<%= form_for @lesson do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :number, 'Lesson number' %>
  <%= f.text_field :number %>
  <%= f.label :content, "Body (use HTML)" %>
  <%= f.text_area :content %>
  <%= f.label :section %>
  <%= f.select :section_id, options_from_collection_for_select(@sections, :id, :name, @lesson.section_id) %>
  <%= f.submit "Save", :class => "btn btn-primary" %>
<% end %>
